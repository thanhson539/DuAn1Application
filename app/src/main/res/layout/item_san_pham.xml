<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#EAD1CE"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgSanPham_item"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/sanpham_co_ngan1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTenSanPham_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="Tên sản phẩm"/>

            <TextView
                android:id="@+id/tvGiaSanPham_item"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giá sản phẩm"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#4E352F"/>

            <TextView
                android:id="@+id/tvChiTiet_item"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chi tiết"
                android:textSize="16sp"
                android:textColor="#5C6BA0"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="#EAD1CE"
    android:gravity="left"
    >

    <LinearLayout
        android:id="@+id/linear_thong_tin_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNameU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hi, Nguyễn Thanh Sơn"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/sdtU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0963943774"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thành viên từ: 10/07/2023"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:layout_toRightOf="@+id/linear_thong_tin_header"
        android:src="@drawable/header_mui_ten" />
</RelativeLayout>